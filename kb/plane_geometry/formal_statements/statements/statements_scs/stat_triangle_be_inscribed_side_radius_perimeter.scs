	=> nrel_main_idtf:
	[Утв.(треугольник;быть вписанным*;радиус*;периметр*)] (*<- lang_ru;;*);
	[Stat.(triangle;be inscribed*;radius*;perimeter*)] (*<- lang_en;;*);;

stat_triangle_be_inscribed_side_radius_perimeter <= nrel_sc_text_translation: 
	... 
	(* 
	-> rrel_example: 
